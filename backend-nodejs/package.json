{
  "name": "meumu-online-backend",
  "version": "1.0.0",
  "description": "Backend Node.js para MeuMU Online - API REST completa",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "security-check": "npm audit && npm outdated",
    "security-fix": "npm audit fix",
    "security-report": "npm audit --json > security-audit.json && echo '✅ Relatório salvo em security-audit.json'",
    "pre-deploy": "npm run security-check",
    "update-check": "npm outdated",
    "update-safe": "npm update --save",
    "clean-install": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "mu-online",
    "api",
    "express",
    "mariadb"
  ],
  "author": "MeuMU Online",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "xss-clean": "^0.1.4",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}